passowrd=sourcemeridian; sudo service mariadb stop; sudo mysqld_safe --skip-grant-tables &>/dev/null & command sleep 3 && mysql -u root -e "use mysql; update user SET PASSWORD=PASSWORD('$password') WHERE USER='root'; flush privileges;"; sudo mysqladmin -u root shutdown && sudo service mariadb start
